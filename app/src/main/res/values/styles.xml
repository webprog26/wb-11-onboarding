<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OnboardingButton" parent="Widget.AppCompat.Button">
      <item name="android:textAllCaps">false</item>
    </style>

    <style name="OnboardingActionButton" parent="OnboardingButton">
        <item name="android:background">@drawable/onboarding_action_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/first_run_small_text_size</item>
    </style>

    <style name="OnboardingSkipButton" parent="OnboardingButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#0080ff</item>
        <item name="android:textSize">@dimen/first_run_small_text_size</item>
    </style>

    <style name="FirstRunTitleText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/first_run_large_text_size</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/boodle_bold</item>
    </style>

    <style name="FirstRunText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#363d47</item>
        <item name="android:fontFamily">@font/boodle_normal</item>
    </style>

    <style name="FirstRunTextMedium" parent="FirstRunText">
        <item name="android:textSize">@dimen/first_run_medium_text_size</item>
    </style>

    <style name="FirstRunTextSmall" parent="FirstRunText">
        <item name="android:textSize">@dimen/first_run_small_text_size</item>
    </style>

</resources>