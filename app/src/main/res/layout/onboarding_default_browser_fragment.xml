<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp">

    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_btn_agree_text"
            style="@style/OnboardingActionButton"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/onboarding_btn_skip_text"
            style="@style/OnboardingSkipButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/controls_container">

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/onboarding_set_as_default"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_set_as_default_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            style="@style/OnboardingTitleText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_set_as_default_text"
            style="@style/OnboardingText"/>


    </LinearLayout>

</RelativeLayout>