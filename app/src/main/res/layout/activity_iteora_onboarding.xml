<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IteoraOnBoardingActivity"
    android:paddingStart="@dimen/first_run_iteora_activity_horizontal_padding"
    android:paddingTop="@dimen/first_run_iteora_activity_padding_top"
    android:paddingEnd="@dimen/first_run_iteora_activity_horizontal_padding"
    android:paddingBottom="@dimen/first_run_iteora_activity_padding_bottom">

    <LinearLayout
        android:id="@+id/pages_number_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/first_run_page_number_pdding_bottom">

        <TextView
            android:id="@+id/tv_pages_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal" />

    </LinearLayout>

    <com.example.wb_11onboarding.IteoraOnBoardingPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pages_number_container"
        android:layout_marginBottom="@dimen/first_run_slides_margin_bottom" />

</RelativeLayout>