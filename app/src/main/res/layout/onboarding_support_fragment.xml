<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.wb_11onboarding.IteoraFirstRunControllerSimple
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:simpleActionButtonText="@string/onboarding_btn_finish_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/controls_container"
        android:scrollbars="none">

        <com.example.wb_11onboarding.IteoraFirstRunViewAdvanced
            android:id="@+id/iteora_first_run_view_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/controls_container"
            android:text="@string/onboarding_support_text" />

    </ScrollView>
</RelativeLayout>